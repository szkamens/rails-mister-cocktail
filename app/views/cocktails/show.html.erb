<div class="container">
  <h2>
    <strong>Name:</strong>
    <%= @cocktail.name %>
  </h2>
  <br>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
    breakfast
  </div>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <p><%=dose.ingredient.name %> : <%= dose.description %>
        <%= link_to "❌", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
        </p>
      </li>
    <% end %>
  </ul>
  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
  <%= link_to cocktails_path do %>
    <i class="fa fa-history"></i> Back to list
  <% end %>
</div>
